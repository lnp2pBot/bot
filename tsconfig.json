{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "lib":["ES2021", "DOM"],
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node"
  },
  "include": [
    "app.ts",
    "bot/**/*",
    "jobs/**/*",
    "ln/**/*",
    "lnurl/**/*",
    "models/**/*",
    "util/**/*",
    "locales/**/*",
  ],
  "exclude": ["node_modules", "dist", "tests", "locales"]
}
